<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:screenOrientation">portrait</item>
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/main_dark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Title">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/all_title_20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/title_margin_left</item>
        <item name="android:layout_marginRight">@dimen/title_margin_right</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
    </style>

    <style name="PlayActivityTitle">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/big_title_24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/title_margin_left</item>
        <item name="android:layout_marginRight">@dimen/title_margin_right</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
    </style>

    <style name="SubTitle">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/sub_title_16dp</item>
        <item name="android:layout_marginLeft">@dimen/title_margin_left</item>
        <item name="android:layout_marginRight">@dimen/title_margin_right</item>
        <item name="android:layout_marginTop">@dimen/layout_gutter</item>
    </style>

    <style name="ListSubTitle">
        <item name="android:textSize">@dimen/sub_title_16dp</item>
        <item name="android:layout_marginStart">@dimen/title_margin_left</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DiaryListTheme">
        <item name="android:layout_marginTop">@dimen/layout_gutter</item>
    </style>

    <style name="EmojiChoiceType">
        <item name="android:textSize">35dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/emoji_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextButton">
        <item name="android:textColor">@color/all_purple</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextButtonNormal">
        <item name="android:textColor">@color/all_purple</item>
        <item name="android:textSize">@dimen/all_body_16dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/all_purple</item>
        <item name="android:colorPrimary">@color/all_purple</item>
        <item name="android:colorPrimaryDark">@color/all_purple</item>
        <item name="android:numbersTextColor">@color/black</item>
        <item name="colorControlActivated">@color/all_purple</item>
    </style>

    <style name="AlarmTimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="colorControlActivated">#558b2f</item>
        <item name="colorPrimary">@color/white</item>


    </style>

    <style name="AlarmTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/all_body_16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RippleDefaultStyle">

    </style>

    <style name="PasswordInputTheme">
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40dp</item>
        <item name="android:digits">@string/password_limit_number</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PasswordNumberButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#FF464646</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="AnalyzedEmotionShowingDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_emotion_dialog_up</item>
        <item name="android:windowExitAnimation">@anim/anim_emotion_dialog_down</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Action Bar 테마 관련 설정-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="subtitle_style">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="explain_style_black">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="explain_style_gray">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/password_text_gray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/main_dark</item>
        <item name="android:textColorPrimary">@color/main_text</item>
        <item name="android:background">@color/white</item>
    </style>
  
    <style name="CustomNumberPickerTheme">
        <item name="android:textSize">20dp</item>
        <item name="android:colorControlActivated">@color/main_dark</item>
        <item name="android:colorControlNormal">@color/main_dark</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

</resources>
