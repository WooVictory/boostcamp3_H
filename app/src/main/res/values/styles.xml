<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:screenOrientation">portrait</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/all_title_34dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/title_margin_left</item>
        <item name="android:layout_marginRight">@dimen/title_margin_right</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
    </style>

    <style name="SubTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sub_title_24dp</item>
        <item name="android:layout_marginLeft">@dimen/title_margin_left</item>
        <item name="android:layout_marginRight">@dimen/title_margin_right</item>
        <item name="android:layout_marginTop">@dimen/layout_gutter</item>
    </style>

    <style name="ListSubTitle">
        <item name="android:textSize">@dimen/sub_title_24dp</item>
        <item name="android:layout_marginStart">@dimen/title_margin_left</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DiaryListTheme">
        <item name="android:layout_marginRight">@dimen/layout_margin</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin</item>
        <item name="android:layout_marginTop">@dimen/layout_gutter</item>
    </style>

    <style name="EmojiChoiceType">
        <item name="android:textSize">40dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextButton">
        <item name="android:textColor">@color/all_purple</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextButtonNormal">
        <item name="android:textColor">@color/all_purple</item>
        <item name="android:textSize">@dimen/all_body_16dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/all_purple</item>
        <item name="android:colorPrimary">@color/all_purple</item>
        <item name="android:colorPrimaryDark">@color/all_purple</item>
        <item name="android:numbersTextColor">@color/black</item>
        <item name="colorControlActivated">@color/all_purple</item>
    </style>

    <style name="AlarmTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/all_body_16dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RippleDefaultStyle">

    </style>

    <style name="PasswordInputTheme">
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:digits">@string/password_limit_number</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PasswordButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#FF464646</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Action Bar 테마 관련 설정-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
