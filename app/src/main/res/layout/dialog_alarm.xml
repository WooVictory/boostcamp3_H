<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="310dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        style="@style/AlarmTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin"
        android:text="시간을 설정해주세요."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/layout_margin"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title" />

    <NumberPicker
        android:id="@+id/np_dialog_alarm_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/layout_margin"
        android:descendantFocusability="blocksDescendants"
        app:layout_constraintEnd_toStartOf="@+id/tv_alarm_marker"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_alarm_marker"
        app:layout_constraintBottom_toBottomOf="@+id/tv_alarm_marker"
        app:layout_constraintTop_toBottomOf="@+id/view_dialog_line" />

    <TextView
        android:id="@+id/tv_alarm_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ll_dialog_button_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_dialog_line"
        />

    <NumberPicker
        android:id="@+id/np_dialog_alarm_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin"
        app:layout_constraintTop_toTopOf="@+id/tv_alarm_marker"
        app:layout_constraintBottom_toBottomOf="@+id/tv_alarm_marker"
        android:descendantFocusability="blocksDescendants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/tv_alarm_marker"
        app:layout_constraintTop_toBottomOf="@id/view_dialog_line" />

    <View
        android:id="@+id/view_dialog_button_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/layout_gutter"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/np_dialog_alarm_minute" />

    <LinearLayout
        android:id="@+id/ll_dialog_button_group"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/card_elevation"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_dialog_button_line">

        <TextView
            android:id="@+id/tv_alarm_cancel"
            style="@style/AlarmTextStyle"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cancel" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_alarm_ok"
            style="@style/AlarmTextStyle"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Set" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>